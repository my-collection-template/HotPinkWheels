@{
    ViewData["Title"] = "Login pagina" ;
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-3">
        <h2>Inloggen</h2>
        <form>
          Email:<br>
